@model ICollection<Fiap.Exemplo02.MVC.Web.Models.Aluno>

<h2>Listar</h2>

@Helper.Message(TempData["msg"], "alert alert-success")


@using (Html.BeginForm("Buscar", "Aluno", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="row">

        <div class="col-md-3">
            @Html.TextBox("nomeBusca", "", new { @class = "form-control", placeholder = "Digite um nome" })
        </div>

        <div class="col-md-3">
            @Html.DropDownList("idGrupo", ViewBag.grupos as SelectList, "Selecione um Grupo", new { @class = "form-control" })
        </div>

        <div class="col-md-3">
            @Helper.Submit("Filtrar", "btn btn-primary")
        </div>

    </div>

}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Bolsa</th>
            <th>Desconto</th>
            <th>Grupo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Nome</td>
                <td> @item.DataNascimento.ToString("dd/MM/yyyy") </td>
                @if (@item.Bolsa)
                {
                    <td>Sim</td>
                }
                else
                {
                    <td>Não</td>
                }
                <td>@item.Desconto</td>
                <td>@item.Grupo.Nome</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = @item.Id }, new { @class = "btn btn-primary" })
                    <button onclick="alunoId.value = @item.Id" type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                        Excluir
                    </button>
                </td>

            </tr>
        } 
    </tbody>
</table>

<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            <div class="modal-body">
                Realmente deseja Excluir o Aluno?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Excluir", "Aluno"))
                {
                    <input type="hidden" id="alunoId" name="alunoId" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                }
            </div>
        </div>
    </div>
</div>


